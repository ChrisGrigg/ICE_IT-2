<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp" >

    <Button android:id="@+id/btn_contact"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/addContact"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:background="@color/material_blue_grey_800" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/btn_contact"
        android:layout_marginTop="16dp"  />

    <ImageView android:id="@+id/img_contact"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:contentDescription="Contacts Image"
        android:src="@mipmap/ic_profile"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/divider" />

    <TextView android:id="@+id/fullName_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/img_contact"
        android:layout_below="@+id/divider"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp" />

    <TextView android:id="@+id/telNumber_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telephone Number"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/img_contact"
        android:layout_below="@+id/fullName_contact"
        android:layout_marginLeft="12dp"
        />

</RelativeLayout>
